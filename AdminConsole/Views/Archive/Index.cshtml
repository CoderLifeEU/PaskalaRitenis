<script type="text/javascript" src="~/Scripts/jquery-1.8.2.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/Rezultati.css">
<input hidden id="year" value="@ViewBag.Year" />
<h3>@ViewBag.Year. Gada Uzdevumi:</h3>
<table id="fileTable"></table>
<hr />


<script type="text/javascript">

    $(document).ready(function () {
        getFiles();
    });

    //AJAX ***********************************************************************************

    function getFiles() {
        $.ajax({
            type: "GET",
            url: "Archive/GetFiles?year=" + $("#year").val(),
            dataType: "json",
            cache: false
        })
        .done(function (data) {
            alert("ez peasy");
            var tableHTML = "";
            $.each(data, function (i, file) {
                tableHTML += "<tr><th>" + file.FileName + "</th>";
                tableHTML += "<td><input type='button' value='Dzēst' onclick='deleteFile(&quot;" + file.Id + "&quot;)' class='button' /></td></tr>";
            });
            $("#fileTable").html(tableHTML);
        })
    }

    function deleteFile(id) {
        if (confirm("Dzēst?")) {
            $.ajax({
                type: "POST",
                url: "Archive/DeleteFile",
                dataType: "text",
                contentType: "application/json; charset=utf-8",
                data: "{'id': '" + id + "' }"
            })
            .done(function () {
                getFiles();
            })
        }
    }

</script>