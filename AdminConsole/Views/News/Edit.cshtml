@model AdminConsole.Models.NewsModel

@{
    ViewBag.Title = "Edit";
}
<script src="~/Content/ckeditor/ckeditor.js"></script>
<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>News</legend>
        <div>
            @Html.TextAreaFor(model => model.Info, new { @id = "editor1", name = "editor1" })
            @Html.ValidationMessageFor(model => model.Info)
        </div>
         <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    CKEDITOR.replace('editor1', { htmlEncodeOutput: true, filebrowserImageUploadUrl: "/Upload.ashx" });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
