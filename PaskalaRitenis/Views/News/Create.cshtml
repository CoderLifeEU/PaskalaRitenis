@model PaskalaRitenis.Models.NewsModel

@{
    ViewBag.Title = "Create";
}
<script src="~/Content/ckeditor/ckeditor.js"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Ziņas</legend>
        <div>
            @Html.TextAreaFor(model => model.Info, new { @id = "editor1", name = "editor1" })
            @Html.ValidationMessageFor(model => model.Info)
        </div>
        <br />
        <input type="submit" class="btn btn-default" value="Saglabāt" />

        <div>
            @Html.ActionLink("Atpakaļ pie Ziņu saraksta", "Index")
        </div>
    </fieldset>
}
<script>
    CKEDITOR.replace('editor1', { htmlEncodeOutput: true, filebrowserImageUploadUrl: "/Upload.ashx"});
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

