@model PaskalaRitenis.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-4">
            <fieldset>
                <div class="" style="padding-top: 15px">
                    <div class="form-group @(ViewData.ModelState.IsValidField("Username") ? "" : "has-error")">
                        <p class="registr-p">@Html.LabelFor(m => m.Username, new { @class = "control-label" })</p>
                        <p>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Username)
                        </p>
                    </div>

                    <div class="form-group @(ViewData.ModelState.IsValidField("Password") ? "" : "has-error")">
                        <p class="registr-p">@Html.LabelFor(m => m.Password, new { @class = "control-label" })</p>
                        <p>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </p>
                    </div>

                    <p>
                        <input type="submit" class="btn btn-default" value="Ielogoties" />
                    </p>
                </div>
            </fieldset>
        </div>
    </div>
    
}
