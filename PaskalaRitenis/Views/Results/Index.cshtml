@model IEnumerable<PaskalaRitenis.Models.RezultatiModel>
@{
    ViewBag.Title = "Olimpiāžu Rezultāti";
}
<h2>@ViewBag.Title</h2>

@foreach (var item in Model)
{
    <button class="submit-btn" onclick="previewPdf('@item.RezultatiLink')">@item.Gads.ToString()</button><br />
}

<script type="text/javascript">

    function previewPdf(_name) {
        var re = /(?:\.([^.]+))?$/;
        if (re.exec(_name)[1] == "pdf") {
            var action = "@Url.Action("GetPdf", "Results")?name=" + _name;
        }
        else {
            var action = "@Url.Action("GetFile", "Results")?name=" + _name;
        }
        location.href = action;
    }

</script>